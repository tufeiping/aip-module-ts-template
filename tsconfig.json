{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "strict": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}